{
  "presets": ["@babel/preset-react", "babel-preset-expo"],
  "plugins": [
    "@babel/plugin-syntax-jsx",
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@components": "./src/components",
          "@screens": "./src/screens",
          "@utils": "./src/utils",
          "@theme": "./src/theme"
        }
      }
    ]
  ]
}
